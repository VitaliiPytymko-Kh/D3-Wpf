<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WPF Media Player" Height="720" Width="1120" WindowStartupLocation="CenterOwner" BorderThickness="3,3,3,4" FontSize="14" FontWeight="Bold" FontStyle="Italic" Background="#FF0073FF" Loaded="Window_loaded">
    <Canvas MouseWheel="Canvas_MouseWheel" HorizontalAlignment="Center" Height="698"  Width="1114" VerticalAlignment="Center"  Background="#FF707070">
        <Border  BorderBrush="Black" BorderThickness="1" Height="595" Width="1115" Canvas.Top="40" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" >
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.011"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <MediaElement x:Name="ME" Margin="5,5,5,5" Stretch="UniformToFill"  />
        </Border>
        <Button x:Name="B1" Content="Play" Canvas.Left="15" Canvas.Top="636" HorizontalAlignment="Left" VerticalAlignment="Center" Width="102" Background="#FF14CD33" RenderTransformOrigin="0.5,1.372" Click="B1_Click"/>
        <Button x:Name="B2" Content="Pouse" Canvas.Left="117" Canvas.Top="636" Width="102" Background="#FFECFF00" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.495,0.621" Click="B2_Click"/>
        <Button x:Name="B3" Content="Stop" Canvas.Left="219" Canvas.Top="636" Width="102" Background="#FFFF5700" HorizontalAlignment="Left" VerticalAlignment="Center" Click="B3_Click"/>
        <Button x:Name="B4" Content="Exit" Canvas.Left="654" Canvas.Top="636" Width="102" HorizontalAlignment="Left" VerticalAlignment="Center" Click="B4_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFCCEEE6" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="B5" Content="Browse ..." Canvas.Left="910" Canvas.Top="9" Width="192" Background="#FFE2E5EA" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="#FF2DCFB0" RenderTransformOrigin="0.516,-0.485" Click="B5_Click"/>
        <TextBox x:Name="tb" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="10" Width="890" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="#FFCFD6E8">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFCED3B4" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <Slider Name="volumeSlider"  VerticalAlignment="Top" ValueChanged="ChangeMediaVolume" Minimum="0" Maximum="1" Value="0.5" Width="225" Background="#FFFF009D" Canvas.Left="414" Canvas.Top="638" HorizontalAlignment="Left"/>
        <TextBlock x:Name="Vol" Canvas.Left="341"  TextWrapping="Wrap" Canvas.Top="638" HorizontalAlignment="Left" Height="19" VerticalAlignment="Center" Width="60" RenderTransformOrigin="0.412,-0.067" Background="#FF707070"><Run Text ="Volume"/></TextBlock>
        <TextBlock x:Name="lblProgressStatus" Canvas.Left="10" Canvas.Top="664">00:00:00</TextBlock>

        <!--<Slider Name="sliProgress" Thumb.DragStarted="sliProgress_DragStarted"  Thumb.DragCompleted="sliProgress_DragCompleted" ValueChanged="sliProgress_ValueChanged" Canvas.Left="105" Canvas.Top="665" HorizontalAlignment="Left" VerticalAlignment="Center" Width="475" />-->
        <StatusBarItem  HorizontalContentAlignment="Stretch" Canvas.Left="99" Canvas.Top="661">
            <Slider Name="sliProgress" Thumb.DragStarted="sliProgress_DragStarted"  Thumb.DragCompleted="sliProgress_DragCompleted" ValueChanged="sliProgress_ValueChanged" Width="520" />
        </StatusBarItem>



    </Canvas>
</Window>
