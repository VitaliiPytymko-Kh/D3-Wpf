<Window x:Class="WpfApp1.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AboutWindow" Height="450" Width="800">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/aboutQr_Background.jpg"/>
        </Grid.Background>
        <FlowDocumentReader>
            <FlowDocumentReader.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF00F3FF" Offset="1"/>
                </LinearGradientBrush>
            </FlowDocumentReader.Background>
            <FlowDocument>
                <Paragraph FontFamily="Arial Black">
                    <Bold Foreground="red">Информация о разработчике: https://github.com/VitaliiPytymko-Kh</Bold>
                </Paragraph>
                <Paragraph>
                    <Bold Foreground="#FF00F3FF">За всеми этапами разработки данного приложения можно следить здесь:
                    >https://github.com/VitaliiPytymko-Kh/D3-Wpf.git</Bold>
                </Paragraph>
            </FlowDocument>
        </FlowDocumentReader>
    </Grid>
</Window>
